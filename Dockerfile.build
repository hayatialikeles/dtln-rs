# Dockerfile for building dtln-rs for Linux x64
FROM rust:1.70-slim

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    curl \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build

# Copy source files
COPY . .

# Build for Linux x64
RUN npm install
RUN cargo build --release --lib --target x86_64-unknown-linux-gnu

# The output will be in target/x86_64-unknown-linux-gnu/release/
